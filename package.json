{
  "name": "wollama",
  "version": "0.0.9",
  "author": "Medyll",
  "description": "web ui for ollama",
  "private": false,
  "type": "module",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "standard-version",
    "tauri": "tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@medyll/idae-api": "file:../../idae/packages/idae-api",
    "@medyll/idae-be": "file:../../idae/packages/idae-be",
    "@medyll/idae-data-tpl": "file:../../idae/packages/idae-data-tpl",
    "@medyll/idae-dom-events": "file:../../idae/packages/idae-dom-events",
    "@medyll/idae-engine": "file:../../idae/packages/idae-engine",
    "@medyll/idae-idbql": "file:../../idae/packages/idae-idbql",
    "@medyll/idae-mongo": "file:../../idae/packages/idae-mongo",
    "@medyll/idae-query": "file:../../idae/packages/idae-query",
    "@medyll/idae-slotui-svelte": "file:../../idae/packages/idae-slotui",
    "@tauri-apps/api": ">=2.2.0",
    "@tauri-apps/plugin-shell": ">=2.2.0",
    "cheerio": "^1.0.0",
    "date-fns": "^4.1.0",
    "highlight.js": "^11.11.1",
    "hljs": "^6.2.3",
    "i18n": "^0.15.1",
    "idb": "^8.0.2",
    "jsdom": "^26.0.0",
    "marked": "^15.0.6",
    "marked-highlight": "^2.2.1",
    "ollama": "^0.5.12",
    "ollama-node": "^0.1.28",
    "prismjs": "^1.29.0",
    "ts-deepmerge": "^7.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.17.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/cli": ">=2.2.7",
    "@types/marked": "^6.0.0",
    "@unocss/extractor-svelte": "^65.4.3",
    "husky": "^9.1.7",
    "postcss": "^8.5.1",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "sass-embedded": "^1.83.4",
    "standard-version": "^9.5.0",
    "svelte": "^5.19.6",
    "svelte-check": "^4.1.4",
    "tailwindcss": "^4.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "unocss": "^65.4.3",
    "vite": "^6.0.11"
  }
}